@page
@model llm.Pages.Account.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="bi bi-person-badge"></i>
                        User Profile
                    </h4>
                </div>
                <div class="card-body">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="row">
                            <div class="col-md-4 text-center">
                                <i class="bi bi-person-circle" style="font-size: 5rem; color: #0078d4;"></i>
                                <h5 class="mt-2">@Model.DisplayName</h5>
                                <p class="text-muted">@Model.JobTitle</p>
                            </div>
                            <div class="col-md-8">
                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <th scope="row" class="col-3">
                                                <i class="bi bi-envelope"></i> Email:
                                            </th>
                                            <td>@Model.Email</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">
                                                <i class="bi bi-person"></i> Display Name:
                                            </th>
                                            <td>@Model.DisplayName</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">
                                                <i class="bi bi-briefcase"></i> Job Title:
                                            </th>
                                            <td>@(Model.JobTitle ?? "Not specified")</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">
                                                <i class="bi bi-building"></i> Department:
                                            </th>
                                            <td>@(Model.Department ?? "Not specified")</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">
                                                <i class="bi bi-geo-alt"></i> Office Location:
                                            </th>
                                            <td>@(Model.OfficeLocation ?? "Not specified")</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">
                                                <i class="bi bi-telephone"></i> Mobile Phone:
                                            </th>
                                            <td>@(Model.MobilePhone ?? "Not specified")</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">
                                                <i class="bi bi-building"></i> Company:
                                            </th>
                                            <td>@(Model.CompanyName ?? "Not specified")</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        
                        <hr>
                        
                        <div class="row">
                            <div class="col-12">
                                <h6>
                                    <i class="bi bi-shield-check"></i>
                                    Authentication Details
                                </h6>
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <tbody>
                                            <tr>
                                                <th>User ID:</th>
                                                <td>@Model.UserId</td>
                                            </tr>
                                            <tr>
                                                <th>Tenant ID:</th>
                                                <td>@Model.TenantId</td>
                                            </tr>
                                            <tr>
                                                <th>Authentication Time:</th>
                                                <td>@Model.AuthTime</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center">
                            <h5>Not authenticated</h5>
                            <p>Please sign in to view your profile.</p>
                            <a asp-page="/Account/Login" class="btn btn-primary">Sign In</a>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6>
                        <i class="bi bi-gear"></i>
                        Quick Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-page="/Users/Index" class="btn btn-outline-primary">
                            <i class="bi bi-people"></i> Manage Users
                        </a>
                        <a href="/MicrosoftIdentity/Account/SignOut" class="btn btn-outline-danger">
                            <i class="bi bi-box-arrow-right"></i> Sign Out
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
