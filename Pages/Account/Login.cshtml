@page
@model llm.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Sign In";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h2 class="card-title mb-4">
                        <i class="bi bi-shield-lock"></i>
                        Sign In Required
                    </h2>
                    
                    <p class="text-muted mb-4">
                        Please sign in with your Office 365 account to access the User Management System.
                    </p>
                    
                    <div class="mb-4">
                        <img src="https://img.icons8.com/fluency/96/microsoft.png" alt="Microsoft Office 365" style="width: 64px; height: 64px;">
                    </div>
                    
                    <form method="get" asp-page="/MicrosoftIdentity/Account/SignIn" asp-route-returnUrl="@Model.ReturnUrl">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-microsoft"></i>
                            Sign in with Office 365
                        </button>
                    </form>
                    
                    <div class="mt-4">
                        <small class="text-muted">
                            You will be redirected to Microsoft's secure login page.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
