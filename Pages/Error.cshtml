@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i>
                        Oops! Something went wrong
                    </h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-emoji-frown" style="font-size: 4rem; color: #dc3545;"></i>
                    </div>
                    
                    <h5>We're sorry, but an error occurred while processing your request.</h5>
                    <p class="text-muted">
                        Our team has been notified and is working to resolve this issue. 
                        Please try again in a few moments.
                    </p>
                    
                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-light mt-4">
                            <small class="text-muted">
                                <strong>Request ID:</strong> @Model.RequestId
                            </small>
                        </div>
                    }
                    
                    <div class="mt-4">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house"></i> Return to Home
                        </a>
                        <a href="javascript:history.back()" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Go Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
