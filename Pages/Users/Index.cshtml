@page
@model llm.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Users Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Users Management</h1>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create New User
    </a>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">All Users</h5>
                <small class="text-muted">Manage your application users</small>
            </div>
            <div class="card-body">
                @if (Model.UsersList?.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                    <th>Created At</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.UsersList)
                                {
                                    <tr>
                                        <td>@user.Id</td>
                                        <td>
                                            <strong>@user.Name</strong>
                                        </td>
                                        <td>
                                            <a href="mailto:@user.Email" class="text-decoration-none">@user.Email</a>
                                        </td>
                                        <td>
                                            @if (user.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td>
                                            <small>@user.CreatedAt.ToString("MMM dd, yyyy")</small><br>
                                            <small class="text-muted">@user.CreatedAt.ToString("h:mm tt")</small>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-page="./Details" asp-route-id="@user.Id" class="btn btn-sm btn-info" title="View Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-page="./Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-page="./Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    <div class="mt-3">
                        <small class="text-muted">Total Users: @Model.UsersList.Count</small>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="mb-3">
                            <i class="bi bi-people" style="font-size: 3rem; color: #6c757d;"></i>
                        </div>
                        <h5>No users found</h5>
                        <p class="text-muted">Get started by creating your first user.</p>
                        <a asp-page="Create" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Create First User
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-page="/Index" class="btn btn-secondary">
        <i class="bi bi-house"></i> Back to Home
    </a>
</div>
