@page
@model llm.Pages.Users.CreateModel
@{
    ViewData["Title"] = "Create User";
}

<h1>Create User</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="UserModel.Name" class="control-label"></label>
                <input asp-for="UserModel.Name" class="form-control" />
                <span asp-validation-for="UserModel.Name" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="UserModel.Email" class="control-label"></label>
                <input asp-for="UserModel.Email" class="form-control" type="email" />
                <span asp-validation-for="UserModel.Email" class="text-danger"></span>
            </div>
            
            <div class="form-check mb-3">
                <input asp-for="UserModel.IsActive" class="form-check-input" type="checkbox" checked />
                <label asp-for="UserModel.IsActive" class="form-check-label">Is Active</label>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
