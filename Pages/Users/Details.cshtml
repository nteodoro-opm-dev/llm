@page
@model llm.Pages.Users.DetailsModel
@{
    ViewData["Title"] = "User Details";
}

<h1>User Details</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>@Model.UserModel?.Name</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">ID</dt>
                    <dd class="col-sm-9">@Model.UserModel?.Id</dd>
                    
                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@Model.UserModel?.Name</dd>
                    
                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">
                        <a href="mailto:@Model.UserModel?.Email">@Model.UserModel?.Email</a>
                    </dd>
                    
                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        @if (Model.UserModel?.IsActive == true)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-3">Created At</dt>
                    <dd class="col-sm-9">@Model.UserModel?.CreatedAt.ToString("dddd, MMMM dd, yyyy 'at' h:mm tt")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-page="./Edit" asp-route-id="@Model.UserModel?.Id" class="btn btn-warning">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    <a asp-page="./Delete" asp-route-id="@Model.UserModel?.Id" class="btn btn-danger">Delete</a>
</div>
