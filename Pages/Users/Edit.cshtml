@page
@model llm.Pages.Users.EditModel
@{
    ViewData["Title"] = "Edit User";
}

<h1>Edit User</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserModel.Id" />
            <input type="hidden" asp-for="UserModel.CreatedAt" />
            
            <div class="form-group mb-3">
                <label asp-for="UserModel.Name" class="control-label"></label>
                <input asp-for="UserModel.Name" class="form-control" />
                <span asp-validation-for="UserModel.Name" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="UserModel.Email" class="control-label"></label>
                <input asp-for="UserModel.Email" class="form-control" type="email" />
                <span asp-validation-for="UserModel.Email" class="text-danger"></span>
            </div>
            
            <div class="form-check mb-3">
                <input asp-for="UserModel.IsActive" class="form-check-input" type="checkbox" />
                <label asp-for="UserModel.IsActive" class="form-check-label">Is Active</label>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                <a asp-page="./Details" asp-route-id="@Model.UserModel.Id" class="btn btn-info">Details</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
