@page
@model llm.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Delete User";
}

<h1>Delete User</h1>

<div class="alert alert-danger">
    <h4>⚠️ Confirm Deletion</h4>
    <p>Are you sure you want to delete this user? This action cannot be undone.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>@Model.UserModel?.Name</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">ID</dt>
                    <dd class="col-sm-9">@Model.UserModel?.Id</dd>
                    
                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@Model.UserModel?.Name</dd>
                    
                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@Model.UserModel?.Email</dd>
                    
                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        @if (Model.UserModel?.IsActive == true)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-3">Created At</dt>
                    <dd class="col-sm-9">@Model.UserModel?.CreatedAt.ToString("dddd, MMMM dd, yyyy 'at' h:mm tt")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<form method="post" class="mt-3">
    <input type="hidden" asp-for="UserModel.Id" />
    <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this user?')" />
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>
